<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_270sdp"
    android:layout_height="wrap_content"
    android:padding="@dimen/_3sdp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/ic_baseline_done_all_24"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_gravity="center"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/titleName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:textColor="@android:color/black"
        android:text="@string/success_message"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/_sharePdf"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:text="@string/share"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:background="@drawable/share_button_bg"
            android:textAlignment="center"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/_openPdf"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:text="@string/open"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:background="@drawable/open_button_bg"
            android:textAlignment="center"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>